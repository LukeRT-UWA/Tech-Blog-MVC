<h3>Posted by {{user.username}}</h3>
<h4>{{id}}<br>{{title}}<br>{{content}}</h4>

  <div class="col-md-6">
    <h3>Add a comment to post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="comment-title">comment title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment-text">comment text:</label>
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

<script src="./js/comment.js"></script>